<Window
	x:Class="RemoteLogViewer.WPF.Views.Info.InfoWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:infoVm="clr-namespace:RemoteLogViewer.Core.ViewModels.Info;assembly=RemoteLogViewer.Core"
	xmlns:infoV="clr-namespace:RemoteLogViewer.WPF.Views.Info"
	mc:Ignorable="d"
	Width="800"
	Height="400"
	Title="Informations">
	<Grid ColumnDefinitions="220,*" RowDefinitions="*,Auto">
		<ListView Grid.Column="0" x:Name="CategoryList" ItemsSource="{Binding Pages}" SelectedItem="{Binding SelectedSettingsPage.Value, Mode=TwoWay}">
			<ListView.ItemTemplate>
				<DataTemplate DataType="infoVm:IInfoPageViewModel">
					<TextBlock Text="{Binding PageName}"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		<Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="12">
			<ContentControl Content="{Binding SelectedSettingsPage.Value}" />
		</Border>
		<Grid.Resources>
			<DataTemplate DataType="{x:Type infoVm:LicensePageViewModel}">
				<infoV:LicensePage DataContext="{Binding}"/>
			</DataTemplate>
			<DataTemplate DataType="{x:Type infoVm:AboutPageViewModel}">
				<infoV:AboutPage DataContext="{Binding}" />
			</DataTemplate>
		</Grid.Resources>
	</Grid>
</Window>
