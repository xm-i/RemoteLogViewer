<UserControl
	x:Class="RemoteLogViewer.WPF.Views.LogViewerControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sshVm="clr-namespace:RemoteLogViewer.Core.ViewModels.Ssh;assembly=RemoteLogViewer.Core"
	xmlns:sshV="clr-namespace:RemoteLogViewer.WPF.Views.Ssh"
	x:Name="Root"
	mc:Ignorable="d">
	<Grid>
		<Grid.Resources>
			<DataTemplate DataType="{x:Type sshVm:SshServerSelectorViewModel}">
				<sshV:SshServerSelectorPage DataContext="{Binding}"/>
			</DataTemplate>
			<DataTemplate DataType="{x:Type sshVm:SshBrowserViewModel}">
				<sshV:SshBrowserPage DataContext="{Binding}"/>
			</DataTemplate>
		</Grid.Resources>
		<ContentControl Content="{Binding CurrentPageViewModel.Value}" />
	</Grid>
</UserControl>